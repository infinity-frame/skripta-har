<!DOCTYPE html>
<html lang="cs">
  <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://api.ssps.cajthaml.eu/file/64d9f18f79dad891e8a07c73"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="stylesheet" href="/styles/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HAR - <%=lesson.title%></title>
  <body onload="SetQuiz('<%=JSON.stringify(lesson.quiz)%>')">
    <header style="background-image: url(../images/cover/<%=lesson._id%>.webp);">
      <div class="content">
        <h1><%= lesson.title %></h1>
        <button onclick="window.location.href = '/'">
          <span class="material-symbols-rounded">arrow_back</span>Zpět na hlavní stránku
        </button>
      </div>
    </header>
    <div class="content">
      <p class="chip">
        <span class="material-symbols-rounded">person</span><%=lesson.author%>
      </p>
      <%- converter.makeHtml(lesson.content) %>

      <h2>Kvíz</h2>
      <div class="container">
        <div>
          <p id="questionNum"></p>
          <h3 id="question"></h3>
        </div>
        <div id="answers"></div>
        <button id="next" onclick="next()">
          Další
          <span class="material-symbols-rounded">arrow_forward</span>
        </button>
        <p id="score"></p>
      </div>
    </div>

    <script src="/scripts/quiz.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.0/dist/confetti.browser.min.js"></script>
  </body>
</html>
